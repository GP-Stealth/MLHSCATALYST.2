// Background Color ¯\_(ツ)_/¯ 
import SwiftUI

struct BackGround: View {

    var body: some View {
        
        ZStack{
            
        LinearGradient(gradient: /*@START_MENU_TOKEN@*/Gradient(colors: [Color.red, Color.blue])/*@END_MENU_TOKEN@*/, startPoint: .top, endPoint: .bottom)
            
            
        }
        
    }
}

