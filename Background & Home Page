        //Logo & Subheadline
        Image("MLL2").scaledToFit().shadow(radius: 10)
            .offset(y:-325)
            .offset(x: -150)
       
           
            .padding(.vertical)

                        
            
                Text("MLHS GPS")
                    .font(.subheadline)
                    .fontWeight(.bold)
                    .shadow(color: .blue, radius: 0.1, x:2, y: 2)
                        .offset(y:-325)
                        .offset(x:-150)
                
    
        
        } .padding()
    
        }
        
        
    }
}

